{
    "compilerOptions": {
      "target": "ES2022",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "declaration": true,
      "sourceMap": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": ["node", "jest"],
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*.ts",
      "tests/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }